{
  "name": "ta-cukrarna",
  "version": "1.1.37",
  "private": true,
  "engines": {
    "node": ">=20.9.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "bash ./scripts/write-version.sh && next dev --webpack",
    "build": "bash ./scripts/write-version.sh && NEXT_TELEMETRY_DISABLED=1 next build --webpack",
    "clean": "rm -rf .next out",
    "start": "next start",
    "lint": "eslint",
    "lint:html": "find public -name \"*.html\" -exec html-validate {} + || echo \"No HTML files found - skipping validation\"",
    "lint:secrets": "secretlint .",
    "lint:md": "markdownlint-cli2 \"**/*.md\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:md": "prettier --write \"**/*.md\"",
    "prepare": "husky",
    "release": "./scripts/release.sh",
    "verify": "./scripts/verify-deployment.sh",
    "check-all": "npm run lint && npm run lint:secrets && npm run lint:html && npm run lint:md && npm run format:check"
  },
  "dependencies": {
    "next": "16.1.1",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
    "@secretlint/secretlint-rule-privatekey": "^11.2.5",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "html-validate": "^10.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.5",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.6.2",
    "secretlint": "^11.2.5",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "lint-staged": {
    "*": [
      "secretlint"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "markdownlint-cli2 --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,html}": [
      "prettier --write"
    ]
  }
}
